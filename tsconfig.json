{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./src",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "__tests__",
    "**/*.spec.ts",
    "./dist/**/*"
  ]
}